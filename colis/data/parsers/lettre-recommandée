#/bin/bash
AR="$( tail -n +$( grep -n "<h2[^>]*>Tarifs Lettre recommandée France" $1 | cut -d: -f1 ) $1 | head -n2 | tail -n1 | tr ',' '.' |  sed 's/<tr[^>]*>/\n/g' | grep "Avis" | sed 's/<th.*<\/th><td>//g' | sed 's/ .*//g' )"
echo "{\"n\":\"Lettre recommandée R1\",\"u\":\"https://www.laposte.fr/tarif-lettre-recommandee\",\"h\":true,\"r\":{\"maxL\":60,\"maxH\":3},\"t\":[$( echo $( tail -n +$( grep -n "<h2[^>]*>Tarifs Lettre recommandée France" raw/tarif-lettre-recommandée.html | cut -d: -f1 ) raw/tarif-lettre-recommandée.html | head -n2 | tail -n1 | tr ',' '.' |  sed 's/<tr[^>]*>/\n/g' | grep "g</th>" | sed 's/<th[^>]*>/,{"/g' | sed 's/ kg<\/th><td>/000":/g' | sed 's/ g<\/th><td>/":/g' | sed 's/ €.*/}/g' ) | cut -c2- )],\"a\":{\"f\":16}},"
echo "{\"n\":\"Lettre recommandée R2\",\"u\":\"https://www.laposte.fr/tarif-lettre-recommandee\",\"h\":true,\"r\":{\"maxL\":60,\"maxH\":3},\"t\":[$( echo $( tail -n +$( grep -n "<h2[^>]*>Tarifs Lettre recommandée France" raw/tarif-lettre-recommandée.html | cut -d: -f1 ) raw/tarif-lettre-recommandée.html | head -n2 | tail -n1 | tr ',' '.' |  sed 's/<tr[^>]*>/\n/g' | grep "g</th>" | sed 's/<th[^>]*>/,{"/g' | sed 's/ kg<\/th><td>[^<]*<\/td><td>/000":/g' | sed 's/ g<\/th><td>[^<]*<\/td><td>/":/g' | sed 's/ €.*/}/g' ) | cut -c2- )],\"a\":{\"f\":153}},"
echo "{\"n\":\"Lettre recommandée R3\",\"u\":\"https://www.laposte.fr/tarif-lettre-recommandee\",\"h\":true,\"r\":{\"maxL\":60,\"maxH\":3},\"t\":[$( echo $( tail -n +$( grep -n "<h2[^>]*>Tarifs Lettre recommandée France" raw/tarif-lettre-recommandée.html | cut -d: -f1 ) raw/tarif-lettre-recommandée.html | head -n2 | tail -n1 | tr ',' '.' |  sed 's/<tr[^>]*>/\n/g' | grep "g</th>" | sed 's/<th[^>]*>/,{"/g' | sed 's/ kg<\/th><td>[^<]*<\/td><td>[^<]*<\/td><td>/000":/g' | sed 's/ g<\/th><td>[^<]*<\/td><td>[^<]*<\/td><td>/":/g' | sed 's/ €.*/}/g' ) | cut -c2- )],\"a\":{\"f\":458}}"
